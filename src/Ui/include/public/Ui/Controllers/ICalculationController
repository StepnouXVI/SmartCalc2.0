#pragma once

#include <memory>
#include <string>
#include <vector>

namespace Ui
{
using namespace std;

class ICalculationController
{
  public:
    virtual double Execute(shared_ptr<string> expression) = 0;
    virtual double Execute(shared_ptr<string> expression, double x) = 0;
    virtual shared_ptr<vector<double>> Execute(shared_ptr<string> expression, double start, double end, size_t numberOfSteps) = 0;

  protected:
    virtual ~ICalculationController() = default;
};
} // namespace Ui
